{
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "es2016",
    "lib": ["es2016", "es2019", "es2020.promise", "dom", "dom.iterable"],
    "jsx": "react",
    "allowJs": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "paths": {
      "@kubevirt-utils": ["src/utils"],
      "@kubevirt-utils/*": ["src/utils/*"],
    }
  },
  "include": ["src"],
  "exclude": ["**/node_modules", "**/dist"]
}
